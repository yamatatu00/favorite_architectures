-if user_signed_in?
  - if current_user.likes.find_by(product_id: product.id) 
    = link_to unlike_path(product.id), method: :delete, remote: true, class: "item-details__buttons__left__likes", id: "like-link-#{product.id}"  do
      %i.fas.fa-heart.heart-like
        = "#{product.likes.count}"
  - else
    = link_to like_path(product.id), method: :post, remote: true, class: "item-details__buttons__left__unlikes", id: "like-link-#{product.id}"  do
      %i.fas.fa-heart.heart-unlike
        = "#{product.likes.count}"
-else
  %i.fas.fa-heart.heart-like
    = "#{product.likes.count}"