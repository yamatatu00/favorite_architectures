.newproduct-contents
  = form_with(model: @products, local: true) do |form| 
    .newproduct-contents__top
      %h3.newproduct-contents__top__content post Architectural photo
    %ul.newproduct-contents__lists
      %li.newproduct-contents__lists__image
        #img_field{onclick: "$('#file').click()"}
        = form.file_field :image, placeholder: "image", id: "file",class: "image-form"
      %h3.map-title map(Detailed map only in Japan)
      .newproduct-contents__lists__map#map
        = form.hidden_field :lat, id: 'lat', value: :lat 
        = form.hidden_field :lng, id: 'lng', value: :lng 
      %br
      %li.newproduct-contents__lists__title
        = form.text_field :title, placeholder: "title"
      %li.newproduct-contents__lists__text
        = form.text_area :text, placeholder: "text"
      %li.newproduct-contents__lists__btn
        = form.submit "send"
      %li.newproduct-contents__lists__back
        = link_to 'back', root_path
      %br
      %br



